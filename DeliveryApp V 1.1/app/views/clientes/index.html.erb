
<div class="box-header">
    <h1><i class="en-users"></i>
        Cliente <%= link_to glyph(:plus_sign)+' Nuevo Cliente', new_cliente_path, class: 'btn btn-primary btn-sm pull-right' %>
    </h1>
</div>
<div class="box-body pad table-responsive">
<div class=" table-responsive">
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>usuario</th>
      <th>Documento</th>
      <th>Email</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Pais</th>
      <th>Ciudad</th>
      <th>Departamento</th>
      <th>Usuario</th>
      <th>Estado</th>
      <th class="col-lg-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.apellido %></td>
        <td><%= cliente.nombre_usuario %></td>
        <td><%= cliente.documento %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.celular %></td>
        <td><%= cliente.pais %></td>
        <td><%= cliente.ciudad %></td>
        <td><%= cliente.departamento %></td>
        <td><%= cliente.usuario.nombre_usuario %></td>
        <% if cliente.estado == true %>
          <td class="text-center"><span class="text-success"><i class="fa fa-check"></i></span></td>
        <% end %>
        <% if cliente.estado == false %>
          <td class="text-center"><span class="text-danger"><i class="glyphicon glyphicon-remove"></i></span></td>
        <% end %>
        <td class="col-lg-1">
          <div class="btn-group btn-group-justified">
            <%= link_to glyph(:eye_open)+'', cliente, class: 'btn btn-primary btn-xs' %>
            <%= link_to glyph(:pencil)+'', edit_cliente_path(cliente), class: 'btn btn-warning btn-xs'  %>
            <%= link_to glyph(:remove)+'', cliente, method: :delete, data: { confirm: 'Estas seguro que deseas eliminar?' }, class: 'btn btn-danger btn-xs'  %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>