<div class="box box-primary">
<div class='box-header with-border'>
    <div class="user-block">
        <img class="img-circle tip" src="http://localhost:3000/img/delivery.jpg" width="50" title="" alt="">
        <span class="username text-light-blue text-blue"><%=@titulo %>  </span>
        <span class='description'><%=@clase %> </span>
    </div>
    <div class='box-tools btn-group'>
        <%=link_to glyph(:plus_sign)+' Nuevo Pedido', new_pedido_path, class:'btn btn-link btn-sm tip', title: 'Nuevo Pedido' %>
    </div>
</div>
<div class='box-body'>
    <div class="row">
        <div class="col-lg-12">
            <div class=" table-responsive">
                <table class="table table-striped table-hover table-condensed" cellspacing="0" width="100%" id="tablaMenu">
                    <thead>
    <tr>
      <th>Restaurante</th>
      <th>Orden</th>
      <th>Cliente</th>
      <th>Fecha</th>
      <th>Direccion</th>
      <th>Monto</th>
      <th>Tiempo</th>
      <th>Usuario</th>
      <th>Repartidor</th>
      <th>Estado</th>
      <th class="col-lg-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.empresa.razonsocial %></td>
        <td><%= pedido.orden_numero %></td>
        <td><%= pedido.cliente.nombre %> <%= pedido.cliente.apellido %></td>
        <td><%= pedido.fecha_pedido %></td>
        <td><%= pedido.direccion %></td>
        <td><%= pedido.monto_total %></td>
        <td><%= pedido.tiempo_estimado_envio %></td>
        <td><%= pedido.usuario.nombre_usuario %> <%= pedido.usuario.apellido_usuario %></td>
        <td><%= pedido.repartidor.nombre %> <%= pedido.repartidor.apellido %></td>
        <td><%= pedido.estado %></td>
        <td class="col-lg-1">
          <div class="btn-group btn-group-justified">
            <%=link_to glyph(:eye_open)+'', pedido, class:'btn btn-primary btn-xs' %>
            <%=link_to glyph(:pencil)+'', edit_pedido_path(pedido), class:'btn btn-warning btn-xs' %>
            <%=link_to glyph(:remove)+'', pedido, method: :delete, data: {confirm:'Estas seguro que deseas eliminar?' }, class:'btn btn-danger btn-xs' %>
          </div>
        </td>
      </tr>
    <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>