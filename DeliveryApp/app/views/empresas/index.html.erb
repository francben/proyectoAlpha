
<div class="box-header">
    <h1><i class="en-users"></i>
        Empresa <%= link_to glyph(:plus_sign)+' Nueva Empresa', new_empresa_path, class: 'btn btn-primary btn-sm pull-right' %>
    </h1>
</div>
<div class="box-body pad table-responsive">
<div class=" table-responsive">
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Razonsocial</th>
      <th>Ruc</th>
      <th>Pais</th>
      <th>Ciudad</th>
      <th>Departamento</th>
      <th>Direccion</th>
      <th>Email</th>
      <th>Telefono</th>
      <th>Web</th>
      <th>Estado</th>
      <th class="col-lg-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.razonsocial %></td>
        <td><%= empresa.ruc %></td>
        <td><%= empresa.pais %></td>
        <td><%= empresa.ciudad %></td>
        <td><%= empresa.departamento %></td>
        <td><%= empresa.direccion %></td>
        <td><%= empresa.email %></td>
        <td><%= empresa.telefono %></td>
        <td><%= empresa.web %></td>
        <td><%= empresa.estado %></td>
        <td class="col-lg-1">
          <div class="btn-group btn-group-justified">
            <%= link_to glyph(:eye_open)+'', empresa, class: 'btn btn-primary btn-xs' %>
            <%= link_to glyph(:pencil)+'', edit_empresa_path(empresa), class: 'btn btn-warning btn-xs'  %>
            <%= link_to glyph(:remove)+'', empresa, method: :delete, data: { confirm: 'Estas seguro que deseas eliminar?' }, class: 'btn btn-danger btn-xs'  %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>