<% if current_usuario.rol_id == 1 %>
<div class="box-header">
    <h1><i class="en-cone"></i>
        Roles <%= link_to glyph(:plus_sign)+' Nuevo Rol', new_rol_path, class: 'btn btn-primary btn-sm pull-right' %>
    </h1>
</div>
<div class="box-body pad table-responsive">
    <div class=" table-responsive">
        <table class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th class="text-center">Estado</th>
                    <th colspan="3">Accion</th>
                </tr>
            </thead>
            <tbody>
                <% @roles.each do |rol| %>
                <tr>
                    <td><%= rol.nombre_rol %></td>
                    <td><%= rol.descripcion_rol %></td>

        <% if rol.estado_rol == 1 %>
          <td class="text-center"><span class="text-success"><i class="fa fa-check"></i></span></td>
        <% end %>
        <% if rol.estado_rol == 0 %>
          <td class="text-center"><span class="text-danger"><i class="glyphicon glyphicon-remove"></i></span></td>
        <% end %>
                    <td class="col-lg-1">
          <div class="btn-group btn-group-justified">
            <%= link_to glyph(:eye_open)+'', rol, class: 'btn btn-primary btn-xs' %>
            <%= link_to glyph(:pencil)+'', edit_rol_path(rol), class: 'btn btn-warning btn-xs'  %>
            <%= link_to glyph(:remove)+'', rol, method: :delete, data: { confirm: 'Estas seguro que deseas eliminar?' }, class: 'btn btn-danger btn-xs'  %>
          </div>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

 <% else %>

 <div class="callout callout-danger">
  <h4>Alerta!</h4>
  <p>No tienes autorizacion para acceder a esta pagina.</p>
</div>
<%= render 'permiso' %>
</div>
</div>
 <% end %>