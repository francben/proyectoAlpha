<div class="box-header">
    <h1><i class="glyphicon glyphicon-list"></i>
        Ver datos del usuario <%= link_to glyph(:plus_sign)+' Nuevo Usuario', new_usuario_path, class: 'btn btn-primary btn-sm pull-right' %>
    </h1>
</div>
<div class="box-body pad table-responsive">
<table class="table table-striped table-hover ">
  <tbody>
    <tr>
      <td>
  <strong>Rol:</strong>
  <%= @usuario.rol.nombre_rol %>
      </td>
    </tr>
    <tr>
      <td>
  <strong>Email:</strong>
  <%= @usuario.email %>
      </td>
    </tr>
    <tr>
      <td>
  <strong>Nick usuario:</strong>
  <%= @usuario.nick_usuario %>
      </td>
    </tr>
    <tr>
      <td>
  <strong>Nombre:</strong>
  <%= @usuario.nombre_usuario %>
      </td>
    </tr>
    <tr>
      <td>
  <strong>Apellido:</strong>
  <%= @usuario.apellido_usuario %>
      </td>
    </tr>
    <tr>
      <td>
  <strong>Documento:</strong>
  <%= @usuario.documento_usuario %>
      </td>
    </tr>
    <tr>
      <td>
  <strong>Estado:</strong>
  <%= @usuario.estado_usuario %>
      </td>
    </tr>
    </tbody>
   </table>


<%= link_to glyph(:arrow_left) + ' Volver', usuarios_path %> | 
<%= link_to glyph(:pencil) + ' Editar', edit_usuario_path(@usuario) %>
</div>