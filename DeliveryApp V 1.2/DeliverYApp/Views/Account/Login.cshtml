@using DeliverYApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "margin-bottom-0", id = "", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group m-b-20">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @placeholder = "Email" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group m-b-20">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "Clave" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group checkbox m-b-20">
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe)
    </div>

    <div class="login-buttons">
        <button type="submit" class="btn btn-success btn-block btn-lg">Entrar</button>
    </div>
    <div class="m-t-20">
        Not a member yet? Click <a href="#">here</a> to register.
        @Html.ActionLink("Register as a new user", "Register")
    </div>
    <div class="m-t-20">
        @Html.ActionLink("Forgot your password?", "ForgotPassword")
    </div>
    <p>
        @Html.ActionLink("Register as a new user", "Register")
    </p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            App.init();
            LoginV2.init();
        });
    </script>
}
