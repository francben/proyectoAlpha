<div class="box box-primary">
<div class='box-header with-border'>
    <div class="user-block">
        <img class="img-circle tip" src="http://localhost:3000/img/delivery.jpg" width="50" title="" alt="">
        <span class="username text-light-blue text-blue"><%=@titulo %>  </span>
        <span class='description'><%=@clase %> </span>
    </div>
    <div class='box-tools btn-group'>
        <%=link_to glyph(:plus_sign)+' Nuevo Rol', new_rol_path, class:'btn btn-link btn-sm tip', title: 'Nuevo Rol' %>
    </div>
</div>
<div class='box-body'>
    <div class="row">
        <div class="col-lg-12">
            <div class=" table-responsive">
                <table class="table table-striped table-hover table-condensed" cellspacing="0" width="100%" id="tablaMenu">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th class="text-center">Estado</th>
                            <th>Accion</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @roles.each do |rol| %>
                            <tr>
                                <td>
                                    <%=rol.nombre_rol %>
                                </td>
                                <td>
                                    <%=rol.descripcion_rol %>
                                </td>
                                <% if rol.estado_rol==1 %>
                                    <td class="text-center"><span class="text-success"><i class="fa fa-check"></i></span></td>
                                <% end %>
                                <% if rol.estado_rol==0 %>
                                    <td class="text-center"><span class="text-danger"><i class="glyphicon glyphicon-remove"></i></span></td>
                                <% end %>
                                <td class="col-lg-1">
                                    <div class="btn-group btn-group-justified">
                                        <%=link_to glyph(:eye_open)+'', rol, class:'btn btn-primary btn-xs' %>
                                        <%=link_to glyph(:pencil)+'', edit_rol_path(rol), class:'btn btn-warning btn-xs' %>
                                        <%=link_to glyph(:remove)+'', rol, method: :delete, data: {confirm:'Estas seguro que deseas eliminar?' }, class:'btn btn-danger btn-xs' %>
                                    </div>
                                </td>
                            </tr>
                            <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>